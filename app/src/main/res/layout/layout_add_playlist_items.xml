<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayoutQueueItem"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/songNameDialogPlaylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/uyuyuytr"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/droid_sans_regular"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:layout_toStartOf="@id/checkbox_dialog_playlist_item"
        android:padding="10dp"
        android:text="Song full name "
        android:textColor="@color/white" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_dialog_playlist_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:buttonTint="@color/red_theme" />

    <View
        android:id="@+id/uyuyuytr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#494848" />

</RelativeLayout>