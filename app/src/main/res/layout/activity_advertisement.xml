<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AdvertisementACtivity">

    <TextView
        android:id="@+id/backBtnAdvertising"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/droid_sans_bold"
        android:gravity="end"
        android:text="X"
        android:textColor="@color/red_theme"
        android:textSize="23sp" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtnAdvertising"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="200dp"
        app:iss_auto_cycle="true"
        app:iss_delay="2000"
        app:iss_period="2000"
        app:iss_selected_dot="@drawable/selected_dot"
        app:iss_unselected_dot="@drawable/unselected_dot" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@color/red_theme"
        android:id="@+id/adBtn"
        android:fontFamily="@font/droid_sans_regular"
        android:text="@string/watch_advertising"
        android:textColor="@color/whiteTextColor"/>


</RelativeLayout>