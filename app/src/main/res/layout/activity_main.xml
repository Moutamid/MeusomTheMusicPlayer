<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_layout_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/top_rec_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/top_rec_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:autoSizeTextType="uniform"
                android:breakStrategy="balanced"
                android:maxLines="1"
                android:id="@+id/email_Txt_home"
                android:fontFamily="@font/droid_sans_regular"
                android:text="MOUTAMID"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_home_img" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout_home"
        android:background="@drawable/bottom_rec_bg">

        <LinearLayout
            android:id="@+id/ghgh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/droid_sans_bold"
                android:gravity="center"
                android:text="@string/principle"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red_theme" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonsLayoutHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_music_layout"
            android:layout_below="@+id/ghgh"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/downloadBtnHomeScreen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/red_theme"
                    android:fontFamily="@font/droid_sans_regular"
                    android:text="@string/download"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mySoundBtnHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:fontFamily="@font/droid_sans_regular"
                    android:text="@string/my_sound"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/settingsButtonHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:fontFamily="@font/droid_sans_regular"
                    android:text="@string/settings"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/advertisementBtnHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:fontFamily="@font/droid_sans_regular"
                    android:text="@string/advertising"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/exitButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:fontFamily="@font/droid_sans_regular"
                    android:text="@string/exit"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:text="@string/my_sound"
                    android:textColor="@color/white"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_music_layout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_music_bg"
            android:orientation="vertical">

            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/white" />

            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="13dp">

                <ImageView
                    android:id="@+id/current_music_player_image_view"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@color/red_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/play_pause_layout"
                    android:layout_toEndOf="@id/current_music_player_image_view"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/albumNameHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/droid_sans_regular"
                        android:maxLines="1"
                        android:text="@string/name_of_artist"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/title_small_playerHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/droid_sans_regular"
                        android:maxLines="1"
                        android:text="@string/name_of_music"
                        android:textColor="@color/red_theme"
                        android:textSize="10sp" />

                    <SeekBar
                        android:id="@+id/songProgressBar1"
                        style="@style/seekBarStyle" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/currentDurationSmallPlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/droid_sans_regular"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/totalDurationSmallPlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/droid_sans_regular"
                            android:text="04:30"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/play_pause_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/playPauseBtnSmall"
                        android:layout_width="45dp"
                        android:padding="10dp"
                        android:layout_height="45dp"
                        android:src="@drawable/play" />

                    <ImageView
                        android:id="@+id/nextBtnSmall"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_skip_next_24" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/music_player_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_black_theme"
        android:visibility="gone">

        <ImageView
            android:id="@+id/downMusicLayoutBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:src="@drawable/minimize_player" />

        <ImageView
            android:id="@+id/equalizerBtnMain"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/equalizer" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/downMusicLayoutBtn"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/droid_sans_bold"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/name_of_music"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/songCoverImage"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:src="@color/red_theme" />

            <SeekBar
                android:id="@+id/songProgressBar"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:paddingStart="-10dp"
                android:paddingEnd="-10dp"
                android:progress="70"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/red_theme"
                android:thumb="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp">

                <TextView
                    android:id="@+id/songCurrentDurationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid_sans_regular"
                    android:text="00:00"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/songTotalDurationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/droid_sans_regular"
                    android:text="04:30"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomPlayPauseLayout"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/queueBtnHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/next_song_list" />

            <ImageView
                android:id="@+id/btnShuffle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/radom_off" />

            <ImageView
                android:id="@+id/btnRepeat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/repeat_off" />

            <ImageView
                android:id="@+id/playVideo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_video"
                app:tint="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomPlayPauseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="56dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/prev_btn" />

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="40dp"
                android:src="@drawable/play" />

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/next_btn" />


        </LinearLayout>

        <SeekBar
            android:id="@+id/volumeSeekbar"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-60dp"
            android:layout_marginBottom="230dp"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/red_theme"
            android:rotation="-90"
            android:scaleY="5"
            android:thumbTint="@color/red_theme" />

    </RelativeLayout>

</RelativeLayout>