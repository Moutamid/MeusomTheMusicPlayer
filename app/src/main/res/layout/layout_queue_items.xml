<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/parentLayoutQueueItem"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/songNameDialogQueueHome"
        android:maxLines="1"
        android:layout_above="@+id/uyuyuy"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/droid_sans_regular"
        android:gravity="start|center_vertical"
        android:padding="10dp"
        android:text="Song full name "
        android:textColor="@color/white" />

    <View
        android:id="@+id/uyuyuy"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#494848" />

</RelativeLayout>