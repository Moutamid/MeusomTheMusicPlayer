<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="horizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="bottomSeekbarsLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingsSeekBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/droid_sans_regular</item>
    </style>

    <style name="seekBarStyleSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:progress">40</item>
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/red_theme</item>
        <item name="android:thumb">@android:color/transparent</item>
    </style>
</resources>